<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash_screen</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="MyTransparentTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorOnSurface">@android:color/transparent</item>
    </style>




</resources>